<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hchooney.qewqs.tourtogether.MyFragment.AccountFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/Account_Top_background"
            android:layout_width="match_parent"
            android:layout_height="163dp">

            <ImageView
                android:id="@+id/Account_UserPhoto"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:src="@drawable/noimage"
                android:layout_marginLeft="39dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.0" />


            <ImageButton
                android:id="@+id/account_setting_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_settings_24dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toRightOf="@+id/Account_UserPhoto"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.947" />

            <TextView
                android:id="@+id/Account_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="계정명"
                android:textSize="18dp"
                app:layout_constraintLeft_toRightOf="@+id/Account_UserPhoto"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/account_rating_textview" />

            <ImageButton
                android:background="#00000000"
                android:id="@+id/account_gitf_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="19dp"
                android:scaleType="fitXY"
                android:src="@drawable/gift_pink_vector"
                app:layout_constraintRight_toLeftOf="@+id/account_setting_button"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:scaleType="fitEnd"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@drawable/bottom_citys"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/account_rating_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등급"
                android:textSize="11dp"
                app:layout_constraintLeft_toRightOf="@+id/Account_UserPhoto"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="38dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                android:text="[포인트 : 0p]"
                app:layout_constraintLeft_toRightOf="@+id/Account_UserPhoto"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/Account_UserName" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/account_tab_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="관심장소" />

                    <Button
                        android:id="@+id/account_tab_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="클립" />
                    <Button
                        android:id="@+id/account_tab_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="이벤트" />
                    <Button
                        android:id="@+id/account_tab_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="포인트내역" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/account_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
