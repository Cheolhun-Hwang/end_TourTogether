<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Notice_Filter_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/Notice_Title_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지 제목"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/Notice_Filter_Textview" />

            <TextView
                android:id="@+id/Notice_WriteDate_Textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.00.00"
                android:textColor="@color/grey_700"
                android:textSize="11dp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/Notice_ShowUp_BTN"
                android:layout_toStartOf="@+id/Notice_ShowUp_BTN" />

            <ImageButton
                android:id="@+id/Notice_ShowUp_BTN"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@color/alpha"
                app:srcCompat="@drawable/ic_right_24dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>