<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/EventItem_Thumnail"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/noimage" />

        <LinearLayout
            android:background="#88000000"
            android:layout_width="148dp"
            android:layout_height="148dp"></LinearLayout>

        <TextView
            android:id="@+id/EventItem_When"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="~ 2017. 10. 10."
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/EventItem_Who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="대상 : "
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/EventItem_Thumnail"
            android:layout_alignStart="@+id/EventItem_When" />

        <TextView
            android:id="@+id/EventItem_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/EventItem_When"
            android:layout_below="@+id/EventItem_When"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>